{
  "name": "link-director",
  "version": "1.0.0",
  "description": "Direct your links.",
  "main": "index.js",
  "module": "lib/index.esm.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LouisIV/link-director.git"
  },
  "files": [
    "lib/**/*"
  ],
  "author": "Louis Lombardo iv <louis@lombardo.work>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rimraf lib",
    "test": "jest --config jestconfig.json",
    "test:watch": "yarn jest --watch --notify --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "build": "tsc",
    "precommit": "yarn lint && yarn test",
    "prepublishOnly": "yarn clean && yarn lint && yarn test && codecov && yarn build"
  },
  "engines": {
    "node": ">= 8.x"
  },
  "keywords": [
    "lib-package-boilerplate",
    "package-boilerplate",
    "nodejs-package-boilerplate"
  ],
  "devDependencies": {
    "@types/es6-promise": "^3.3.0",
    "@types/jest": "^24.0.11",
    "codecov": "^3.1.0",
    "husky": "^1.0.1",
    "jest": "^24.3.1",
    "prettier": "^1.13.2",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  }
}
